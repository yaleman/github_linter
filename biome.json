{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "files": {
    "includes": [
      "github_linter/**/*.js",
      "github_linter/**/*.css",
      "!!.venv/",
      "!!**/pico.min.css"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "lineWidth": 80
    }
  },
  "overrides": [
    {
      "includes": ["*.vue"],
      "linter": {
        "enabled": true
      },
      "formatter": {
        "enabled": true
      }
    }
  ]
}
